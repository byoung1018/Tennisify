

<!-- <div class="container"> -->

  <div class="modal-header clearfix">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h1><%= title %></h1>

  </div>

  <div class="modal-body">
    <ul class="errors"></ul>
    <div class="row">
        <label class="form-group col-sm-6">Username
          <input type="text" class="form-control" name="user[username]" value="<%= user.escape("username") %>">
        </label>
        <label class="form-group col-sm-6">Password
          <input type="password" class="form-control" name="user[password]" value="<%= user.escape("password") %>">
        </label>
    </div>

    <div class="row">
      <label class="form-group col-sm-6">First Name
        <input type="text" class="form-control" name="user[fname]" value="<%= user.escape("fname") %>" placeholder="first">
      </label>
      <label class="form-group col-sm-6">Last Name
        <input type="text" class="form-control" name="user[lname]" value="<%= user.escape("lname") %>" placeholder="last">
      </label>
    </div>

    <div class="row">
      <label class="form-group col-sm-6">Email
        <input type="text" class="form-control" name="user[email]" value="<%= user.escape("email") %>">
      </label>

      <label class="form-group col-sm-6">Picture
        <input type="text" class="form-control" name="user[picture]" value="<%= user.escape("picture") %>">
      </label>
    </div>

    <div class="row">
      <label class="form-group col-sm-6">Phone Number
        <input type="text" class="form-control" name="user[phone_number]" value="<%= user.escape("phone_number") %>">
      </label>
      <div class="col-sm-6">
        <label class="birthday col-sm-7">Birthday
          <input type="date" class="form-control" name="user[birthday]" value="<%= user.escape("age") %>">
        </label>
        <label class="col-sm-5">Reveal Age
          <%= buttons("radio", "reveal_age", "user", ['Yes', 'No'], 'Yes') %>
        </label>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <label class="col-sm-6">Level
          <%= select("level", "user", LEVELS)%>
        </label>
        <label class="col-sm-6">Area
          <%= select("area", "user", AREAS)%>
        </label>
      </div>
      <div class="col-sm-6">
        <label>Gender</label>
        <%= buttons('radio', 'gender', "user", ['M', 'F']) %>
      </div>

    </div>
  </div>

  <div class="modal-footer">
    <div class="row col-sm-12">

      <button type="button" class="btn btn-default create-user"><%= submit %></button>
    </div>
  </div>
